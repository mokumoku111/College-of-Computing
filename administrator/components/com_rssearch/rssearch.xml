			<folder>assets</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>views</folder>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>rssearch.php</filename>
		</files>
		
		<languages>
			<language tag="en-GB">language/admin/en-GB.com_rssearch.ini</language>
