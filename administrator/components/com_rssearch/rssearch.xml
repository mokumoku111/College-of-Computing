	<scriptfile>script.rssearch.php</scriptfile>

	<updateservers>
        <server type="extension" priority="1" name="RSSearch!">https://www.rsjoomla.com/updates/free/com_rssearch/Component/com_rssearch_3.x.xml</server>
    </updateservers>
	
